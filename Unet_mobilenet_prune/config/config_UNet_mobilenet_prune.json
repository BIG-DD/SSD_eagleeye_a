{
    "name": "parking_slot",
    "n_gpu": 1,
    
    "arch": {
        "type": "MCnet_resnet18",
        "args": {
        }
    },

	"train_loader": {
		"type": "SegmentationDataLoader",
		"args":{
			"images_folder": "/media/byd/A264AC9264AC6AAD/DataSet/12_7_data/data_origin/images/train/",
			"seg_annotations_folder": "/media/byd/A264AC9264AC6AAD/DataSet/12_7_data/data_origin/ll_seg_annotations/train/",
			"color_channel": "RGB",
			"resize": 256,
			"padding_value": 0,
			"is_training": true,
			"noise_std": 3,
			"crop_range": [0.90, 1.0],
			"flip_hor": 0.5,
			"rotate": 0.0,
			"angle": 10,
			"normalize": true,
			"one_hot": false,
			"shuffle": true,
			"batch_size": 2,
			"n_workers": 2,
			"pin_memory": true
		}
	},

	"valid_loader": {
		"type": "SegmentationDataLoader",
		"args":{
			"images_folder": "/media/byd/A264AC9264AC6AAD/DataSet/12_7_data/data_origin/images/val/",
			"seg_annotations_folder": "/media/byd/A264AC9264AC6AAD/DataSet/12_7_data/data_origin/ll_seg_annotations/val/",
			"color_channel": "RGB",
			"resize": 256,
			"padding_value": 0,
			"is_training": false,
			"normalize": true,
			"one_hot": false,
			"shuffle": false,
			"batch_size": 2,
			"n_workers": 2,
			"pin_memory": true
		}
	},

	"optimizer": {
		"type": "SGD",
		"args":{
			"lr": 1e-2,
			"momentum": 0.9,
			"weight_decay": 1e-8
		}
	},

	"loss": "dice_and_ce_loss",
	"metrics": [
		"miou"
